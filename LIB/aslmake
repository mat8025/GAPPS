
#
# makefile for compiling asc file using GASP libs
#
#  asc file is produced from asl file using asl -dwT to process asl script file
#

gasp_sys = /home/mark/gasp-CARBON

TAR = "vops"

$(info TAR = $(TAR))


LFLAGS =  -fPIC -DPIC -Wall  -I../../libs -I$(gasp_sys)/include -I/usr/include  -c

# how many libs need to be loaded for cpp  produced via asl
# libmda ??

LDADD = -L$(gasp_sys)/lib  \
	-lvec_asl \
	-lmatrix_asl \
	-lfop_asl \
	-lnum_asl \
	-lstr_asl \
	-lrecord_asl \
	-lspil_asl \
	-ltest_asl \
	-lmath_asl \
	-ldf_asl \
	-lds_asl \
	-lsvar_asl \
	-llist_asl \
	-lgslists_asl \
	-ldsp_asl \
	-lpan_asl \
	-lgscom_asl \
	-lwcom_asl \
        -lplot_asl	\
	-lm -ldl -lpthread


out:
	g++ -x c++  -g -fpermissive  -rdynamic -o $(TAR) $(TAR).asc  -DMYFILE=\"$(TAR).asc\" -I$(gasp_sys)/include -ldl  $(LDADD) 

