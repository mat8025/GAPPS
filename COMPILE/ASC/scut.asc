/*             
ws=scut(w1,nc) 
cuts n chars from head or tail ( if n is negative) of the string w1,
and returns result to string ws.
*/             
  #include "cpp_head.h"             
               
  Str Use_= "Demo  of scut   e.g.  ws=scut(w1,nc)";
///////////////////////
  
               
  #include "debug.asl"
               

               
int main( int argc, char *argv[] ) { // main start
///
  if  ( _dblevel >0 )  {
   debugON();
   cprintf("%S\n",Use_);
  }

  chkIn(_dblevel);
               
  Str w1 = "Je le sais bien";
               
  Str ws1= scut(w1,3);
               
  cprintf("%S\n",ws1);
               
  chkStr(ws1,"le sais bien");
               
  Str ws2= scut(w1,-4);
               
  cprintf("%S\n",ws2);
               
  chkStr(ws2,"Je le sais ");
               
  Str w2 = "";
               
  chkStr(w2,"");
               
  Str ws3=scut(w1,30);
               
  cprintf("%S\n",ws3);
               
  chkStr(ws3,"");
  ws3 = "advancer";
  chkStr(ws3,"argh");

  int len = w1.slen();
               
  cprintf("len of <|%S|> is %d \n",w1,len);
               
  len = slen(ws3);
               
  cprintf("len of <|%S|> is %d \n",ws3,len);
               
  chkN(len,0);
               
  chkOut(1);

//////////////////////////////////
 }  /// end of C++ main   
